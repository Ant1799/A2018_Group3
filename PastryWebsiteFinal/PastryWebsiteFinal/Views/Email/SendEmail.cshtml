@model PastryWebsiteFinal.Models.EmailModel
@{
    ViewBag.Title = "SendEmail";
}

<h2>SendEmail</h2> <hr/>
@if (ViewBag.msg != null)
{
    <div class="alert alert-success">@ViewBag.msg</div>
}
@using (Html.BeginForm())
{
    <div class="input-group col-md-3">
        <input type="text" name="useremail"class="form-control" />
        <div class="input-group-btn">
            <button class="btn btn-success" type="submit">
                <i class="glyphicon glyphicon-send"></i>
            </button>
        </div>
    </div>
}

<html>
<body>
    <div>
        @using (Html.BeginForm("SendEMail", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <table border="0" cellpadding="0" cellspacing="0">
                <tr>
                    <td style="width: 80px;">
                        To:
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.To)
                    </td>
                </tr>
                <tr>
                    <td>
                        Subject:
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.Subject)
                    </td>
                </tr>
                <tr>
                    <td>
                        Body:
                    </td>
                    <td>
                        @Html.TextAreaFor(model => model.Body, new { rows = "3", cols = "20" })
                    </td>
                </tr>
                <tr>
                    <td>
                        Gmail Email:
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.Email);
                    </td>
                </tr>
                <tr>
                    <td>
                        Gmail Password:
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.Password,new { type = "Password" });
                    </td>
                </tr>
            </table>
        }
    </div>
</body>
</html>
<hr />